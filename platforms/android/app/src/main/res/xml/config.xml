<?xml version='1.0' encoding='utf-8'?>
<widget id="stream.tv.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="RemoteInjection">
        <param name="android-package" value="com.truckmovers.cordova.RemoteInjectionPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="ExitApp">
        <param name="android-package" value="cordova.custom.plugins.exitapp.ExitApp" />
    </feature>
    <allow-navigation href="http://localhost/*" />
    <allow-navigation href="https://localhost/*" />
    <allow-navigation href="ionic://*" />
    <feature name="IonicWebView">
        <param name="android-package" value="com.ionicframework.cordova.webview.IonicWebView" />
    </feature>
    <name>OnAir-TV</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <allow-navigation href="https://testtv.cast-tv.app/*" />
    <allow-navigation href="https://airband.cast-tv.app/*" />
    <access origin="https://testtv.cast-tv.app/" />
    <access origin="https://airband.cast-tv.app/" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <splash density="land-xhdpi" src="www/img/splashscreen/android/splash-land-xhdpi.png" />
    <splash density="land-xxhdpi" src="www/img/splashscreen/android/splash-land-xxhdpi.png" />
    <splash density="land-xxxhdpi" src="www/img/splashscreen/android/splash-land-xxxhdpi.png" />
    <splash density="port-xhdpi" src="www/img/splashscreen/android/splash-port-xhdpi.png" />
    <splash density="port-xxhdpi" src="www/img/splashscreen/android/splash-port-xxhdpi.png" />
    <splash density="port-xxxhdpi" src="www/img/splashscreen/android/splash-port-xxxhdpi.png" />
    <icon density="ldpi" src="www/img/icon/android/icon-ldpi.png" />
    <icon density="mdpi" src="www/img/icon/android/icon-mdpi.png" />
    <icon density="hdpi" src="www/img/icon/android/icon-hdpi.png" />
    <icon density="xhdpi" src="www/img/icon/android/icon-xhdpi.png" />
    <icon density="xxhdpi" src="www/img/icon/android/icon-xxhdpi.png" />
    <icon density="xxxhdpi" src="www/img/icon/android/icon-xxxhdpi.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="webView" value="com.ionicframework.cordova.webview.IonicWebViewEngine" />
    <preference name="loadUrlTimeoutValue" value="700000" />
    <preference name="Scheme" value="https" />
    <preference name="ResolveServiceWorkerRequests" value="true" />
    <preference name="Hostname" value="cast-tv.app" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
</widget>
