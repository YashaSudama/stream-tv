<?xml version='1.0' encoding='utf-8'?>
<widget id="stream.tv.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>OnAir-TV</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <allow-navigation href="https://testtv.cast-tv.app/*" />
    <allow-navigation href="https://airband.cast-tv.app/*" />
    <access origin="https://testtv.cast-tv.app/" />
    <access origin="https://airband.cast-tv.app/" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="loadUrlTimeoutValue" value="700000" />
        <preference name="Scheme" value="https" />
        <preference name="ResolveServiceWorkerRequests" value="true" />
        <preference name="Hostname" value="cast-tv.app" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <preference name="AutoHideSplashScreen" value="false" />
        <!-- <preference name="ShowSplashScreenSpinner" value="false"/> -->

        <splash src="www/img/splashscreen/android/splash-land-xhdpi.png" density="land-xhdpi" />
        <splash src="www/img/splashscreen/android/splash-land-xxhdpi.png" density="land-xxhdpi" />
        <splash src="www/img/splashscreen/android/splash-land-xxxhdpi.png" density="land-xxxhdpi" />

        <splash src="www/img/splashscreen/android/splash-port-xhdpi.png" density="port-xhdpi" />
        <splash src="www/img/splashscreen/android/splash-port-xxhdpi.png" density="port-xxhdpi" />
        <splash src="www/img/splashscreen/android/splash-port-xxxhdpi.png" density="port-xxxhdpi" /> 
        
        <icon src="www/img/icon/android/icon-ldpi.png" density="ldpi" />
        <icon src="www/img/icon/android/icon-mdpi.png" density="mdpi" />
        <icon src="www/img/icon/android/icon-hdpi.png" density="hdpi" />
        <icon src="www/img/icon/android/icon-xhdpi.png" density="xhdpi" />
        <icon src="www/img/icon/android/icon-xxhdpi.png" density="xxhdpi" />
        <icon src="www/img/icon/android/icon-xxxhdpi.png" density="xxxhdpi" />

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
